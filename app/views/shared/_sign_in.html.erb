<div class="error_sign_in">
        <div class="form">
          <div id="bgcolor">
            <div id="signin_form">
            
              <%= form_for(:session, url: sessions_path) do |f| %>
              
                <%= f.label :login, "Username" %>
              <div class="fieldlogin">
                <%= f.text_field :login %>
              
                <%= f.label :password %>
                <%= f.password_field :password %>
              </div>  
           
                <div class="underline_on_hover"><%= link_to "Forgot your password?", new_password_reset_path %></div><br>
                <%= f.submit "Log in", class: "button2a" %>
              <% end %>
              <br>

            </div>
              <div id="emphasize"> &nbsp; &nbsp; New User? &nbsp; &nbsp; &nbsp; <a data-target="#myModal2" id="modality" role="button" class="button3" data-toggle="modal">Sign Up</a> &nbsp; </div> &nbsp; 
              <%= render "shared/modal_signup" %>
          </div>
      


        </div>
</div>