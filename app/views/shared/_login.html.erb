
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 id="myModalLabel">Welcome to Antho</h3>
      </div>
      <div class="modal-body">
         <div class="form">
          <div id="signin_form">
            <%= form_for(:session, url: sessions_path) do |f| %>
            
              <%= f.label :login, "Username" %>
              <div class="fieldlogin">
                  <%= f.text_field :login %>
                  <br>
                  <%= f.label :password %>
                  <%= f.password_field :password %>
              </div>   
            <br>
              <div class="underline_on_hover"><%= link_to "Forgot your password?", new_password_reset_path %></div><br>
              <%= f.submit "Log in", class: "button2a" %>
            <% end %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
          <!--button class="button2a" data-dismiss="modal" aria-hidden="true">Close</button-->
                New User? &nbsp; &nbsp;  <!--button class="button3"><%#= link_to "Sign Up", start_path %></button--> 

                 <a type="button" data-toggle="modal" data-target="#myModal2" id="modality" class="button3" >Sign Up</a>
                 
            <!--/p-->&nbsp; &nbsp;
          <%= render "shared/modal_signup" %>
      </div>
    </div>
  </div>
</div>



